                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400g"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/radioButton300"
                app:layout_constraintEnd_toStartOf="@id/radioButton500"
                app:layout_constraintTop_toBottomOf="@id/radioButton150" />
            <RadioButton
                android:id="@+id/radioButton500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500g"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/radioButton400"
                app:layout_constraintEnd_toEndOf="@id/radioButton600"
                app:layout_constraintTop_toBottomOf="@id/radioButton200" />
            <RadioButton
                android:id="@+id/radioButton600"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600g"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/radioButton500"
