<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory android:title="Demo mode">

        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="demo_mode"
            android:title="Demo mode"
            android:summary="Show additional demo and debug information"/>

    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory android:title="Camera">

        <Preference
            android:key="mykey"
            android:title="Calibrate Camera"
            android:summary="Launches chess board camera calibration tool" >
            <intent android:action="android.intent.action.VIEW"
                android:targetPackage="com.grouph.ces.carby"
                android:targetClass="com.grouph.ces.carby.camera_calibration.CameraCalibrationActivity"/>
        </Preference>

    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory android:title="Storage">
        <Preference
            android:key="@string/key_wipe_consume"
            android:title="@string/title_wipe_consume"
            android:summary="@string/summary_wipe_consume"/>
        <Preference
            android:key="@string/key_wipe_all"
            android:title="@string/title_wipe_all"
            android:summary="@string/summary_wipe_all"/>
    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>